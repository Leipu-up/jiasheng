/* home.wxss */
page {
    background-color: #f8f9fa;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  }
  
  .home-page {
    padding-bottom: 60rpx;
  }
  
  /* 顶部导航栏 */
  .top-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 40rpx 32rpx 20rpx;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 0 0 30rpx 30rpx;
  }
  
  .user-section {
    display: flex;
    align-items: center;
  }
  
  .user-avatar {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    border: 3rpx solid rgba(255, 255, 255, 0.3);
    overflow: hidden;
    margin-right: 20rpx;
  }
  
  .avatar-img {
    width: 100%;
    height: 100%;
  }
  
  .user-info {
    display: flex;
    flex-direction: column;
  }
  
  .user-name {
    font-size: 32rpx;
    font-weight: 600;
    color: white;
    margin-bottom: 6rpx;
  }
  
  .user-dept {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.8);
    background: rgba(255, 255, 255, 0.1);
    padding: 4rpx 12rpx;
    border-radius: 12rpx;
    width: fit-content;
  }
  
  .nav-right {
    display: flex;
    align-items: center;
  }
  
  .nav-icon {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 20rpx;
    position: relative;
  }
  
  .icon-text {
    font-size: 32rpx;
    color: white;
  }
  
  .message-badge {
    position: absolute;
    top: -8rpx;
    right: -8rpx;
    min-width: 36rpx;
    height: 36rpx;
    background: #ff4d4f;
    border-radius: 18rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 8rpx;
    border: 2rpx solid white;
  }
  
  .badge-text {
    font-size: 22rpx;
    color: white;
    font-weight: 600;
  }
  
  /* 时间天气区域 */
  .time-weather-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx 32rpx 20rpx;
    background: white;
  }
  
  .time-section {
    flex: 1;
  }
  
  .current-time {
    display: block;
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .weather-info {
    display: flex;
    align-items: center;
  }
  
  .weather-icon {
    font-size: 30rpx;
    margin-right: 10rpx;
  }
  
  .weather-text {
    font-size: 28rpx;
    color: #666;
  }
  
  .refresh-btn {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background: #f0f2f5;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s;
  }
  
  .refresh-btn:active {
    background: #e4e6e9;
    transform: rotate(180deg);
  }
  
  .refresh-icon {
    font-size: 32rpx;
    color: #666;
  }
  
  /* 轮播图区域 */
  .swiper-section {
    position: relative;
    padding: 20rpx 32rpx;
  }
  
  .home-swiper {
    height: 320rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  }
  
  .swiper-item {
    width: 100%;
    height: 100%;
    position: relative;
  }
  
  .swiper-img {
    width: 100%;
    height: 100%;
  }
  
  .swiper-mask {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 100rpx;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent);
  }
  
  .swiper-title {
    position: absolute;
    bottom: 30rpx;
    left: 30rpx;
    right: 30rpx;
    font-size: 32rpx;
    font-weight: 600;
    color: white;
    line-height: 1.4;
  }
  
  .swiper-indicator {
    position: absolute;
    bottom: 50rpx;
    right: 60rpx;
    background: rgba(0, 0, 0, 0.5);
    padding: 8rpx 20rpx;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
  }
  
  .current-index {
    font-size: 28rpx;
    color: white;
    font-weight: 600;
  }
  
  .divider {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.7);
    margin: 0 8rpx;
  }
  
  .total-index {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.7);
  }
  
  /* 数据统计卡片 */
  .statistics-section {
    display: flex;
    padding: 0 32rpx 30rpx;
    gap: 20rpx;
  }
  
  .stat-card {
    flex: 1;
    background: white;
    border-radius: 20rpx;
    padding: 30rpx;
    box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
    transition: all 0.3s;
  }
  
  .stat-card:active {
    transform: translateY(-4rpx);
    box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  }
  
  .stat-header {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
  }
  
  .stat-icon {
    font-size: 36rpx;
    margin-right: 12rpx;
  }
  
  .stat-title {
    font-size: 28rpx;
    color: #666;
    font-weight: 500;
  }
  
  .stat-content {
    display: flex;
    align-items: baseline;
    margin-bottom: 15rpx;
  }
  
  .stat-number {
    font-size: 52rpx;
    font-weight: 700;
    color: #333;
    margin-right: 10rpx;
  }
  
  .stat-unit {
    font-size: 28rpx;
    color: #999;
  }
  
  .stat-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  
  .compare-text {
    font-size: 24rpx;
    color: #999;
  }
  
  .compare-rate {
    font-size: 24rpx;
    font-weight: 600;
    padding: 4rpx 12rpx;
    border-radius: 12rpx;
  }
  
  .compare-rate.up {
    color: #52c41a;
    background: rgba(82, 196, 26, 0.1);
  }
  
  .compare-rate.down {
    color: #ff4d4f;
    background: rgba(255, 77, 79, 0.1);
  }
  
  .target-text {
    font-size: 24rpx;
    color: #999;
  }
  
  .target-status {
    font-size: 24rpx;
    font-weight: 600;
    padding: 4rpx 12rpx;
    border-radius: 12rpx;
  }
  
  .target-status.achieved {
    color: #52c41a;
    background: rgba(82, 196, 26, 0.1);
  }
  
  .target-status.not-achieved {
    color: #fa8c16;
    background: rgba(250, 140, 22, 0.1);
  }
  
  /* 功能模块 */
  .modules-section {
    background: white;
    border-radius: 20rpx;
    margin: 0 32rpx 30rpx;
    padding: 30rpx;
    box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .section-title {
    font-size: 36rpx;
    font-weight: 600;
    color: #333;
  }
  
  .section-subtitle {
    display: flex;
    align-items: center;
  }
  
  .subtitle-text {
    font-size: 26rpx;
    color: #999;
    background: #f8f9fa;
    padding: 8rpx 16rpx;
    border-radius: 15rpx;
  }
  
  .modules-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30rpx;
  }
  
  .module-item {
    background: #f8f9fa;
    border-radius: 20rpx;
    padding: 40rpx 30rpx;
    text-align: center;
    position: relative;
    transition: all 0.3s;
  }
  
  .module-item.enabled {
    background: white;
    border: 2rpx solid #f0f0f0;
  }
  
  .module-item.enabled:active {
    background: #f8f9fa;
    transform: scale(0.98);
  }
  
  .module-item.disabled {
    opacity: 0.7;
  }
  
  .module-icon {
    width: 100rpx;
    height: 100rpx;
    border-radius: 25rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20rpx;
  }
  
  .icon-text {
    font-size: 50rpx;
  }
  
  .module-title {
    display: block;
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .module-desc {
    display: block;
    font-size: 26rpx;
    color: #999;
  }
  
  .module-status {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    background: rgba(255, 255, 255, 0.9);
    padding: 6rpx 12rpx;
    border-radius: 15rpx;
  }
  
  .status-text {
    font-size: 22rpx;
    color: #fa8c16;
    font-weight: 500;
  }
  
  /* 通知公告 */
  .notice-section {
    background: white;
    border-radius: 20rpx;
    margin: 0 32rpx 30rpx;
    padding: 30rpx;
    box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .view-all {
    display: flex;
    align-items: center;
  }
  
  .view-text {
    font-size: 28rpx;
    color: #667eea;
    margin-right: 8rpx;
  }
  
  .arrow-icon {
    font-size: 36rpx;
    color: #667eea;
  }
  
  .notice-list {
    padding-top: 10rpx;
  }
  
  .notice-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 25rpx 0;
    border-bottom: 1rpx solid #f0f0f0;
    transition: all 0.2s;
  }
  
  .notice-item:last-child {
    border-bottom: none;
  }
  
  .notice-item:active {
    background-color: #f8f9fa;
  }
  
  .notice-left {
    display: flex;
    align-items: center;
    flex: 1;
    min-width: 0;
  }
  
  .notice-badge {
    background: #ff4d4f;
    padding: 6rpx 12rpx;
    border-radius: 12rpx;
    margin-right: 15rpx;
    flex-shrink: 0;
  }
  
  .badge-text {
    font-size: 22rpx;
    color: white;
    font-weight: 600;
  }
  
  .notice-title {
    font-size: 30rpx;
    color: #333;
    font-weight: 500;
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  
  .notice-right {
    display: flex;
    align-items: center;
    flex-shrink: 0;
    margin-left: 20rpx;
  }
  
  .notice-time {
    font-size: 26rpx;
    color: #999;
    margin-right: 12rpx;
  }
  
  .notice-arrow {
    font-size: 36rpx;
    color: #ccc;
  }
  
  /* 快捷操作 */
  .quick-actions {
    background: white;
    border-radius: 20rpx;
    margin: 0 32rpx 30rpx;
    padding: 30rpx;
    box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .actions-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 30rpx;
  }
  
  .action-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 30rpx 10rpx;
    border-radius: 16rpx;
    background: #f8f9fa;
    transition: all 0.2s;
  }
  
  .action-item:active {
    background: #e9ecef;
    transform: scale(0.95);
  }
  
  .action-icon {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 20rpx;
  }
  
  .action-title {
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
  }
  
  /* 底部信息 */
  .bottom-info {
    text-align: center;
    padding: 30rpx 32rpx;
  }
  
  .company-name {
    display: block;
    font-size: 26rpx;
    color: #999;
    margin-bottom: 8rpx;
  }
  
  .system-version {
    display: block;
    font-size: 24rpx;
    color: #ccc;
  }
  
  /* 响应式调整 */
  @media (max-width: 750rpx) {
    .top-nav {
      padding: 30rpx 24rpx 20rpx;
    }
    
    .home-swiper {
      height: 280rpx;
    }
    
    .swiper-title {
      font-size: 28rpx;
    }
    
    .statistics-section {
      flex-direction: column;
      gap: 20rpx;
    }
    
    .modules-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 20rpx;
    }
    
    .module-item {
      padding: 30rpx 20rpx;
    }
    
    .actions-grid {
      grid-template-columns: repeat(4, 1fr);
      gap: 20rpx;
    }
  }