/* my.wxss */
page {
    background-color: #f5f5f5;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
}

.my-page {
    padding-bottom: 120rpx;
}

/* 用户信息卡片 */
.user-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 0 0 40rpx 40rpx;
    padding: 60rpx 32rpx 40rpx;
    position: relative;
    overflow: hidden;
    margin-bottom: 30rpx;
}

.card-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.1);
    z-index: 1;
}

.user-info-section {
    display: flex;
    align-items: center;
    margin-bottom: 50rpx;
    position: relative;
    z-index: 2;
}

/* 头像区域 */
.avatar-section {
    margin-right: 30rpx;
}

.avatar-wrapper {
    position: relative;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    border: 4rpx solid rgba(255, 255, 255, 0.3);
    overflow: hidden;
}

.user-avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.avatar-edit {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 48rpx;
    height: 48rpx;
    background: #1890ff;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2rpx solid white;
}

.edit-icon {
    font-size: 24rpx;
    color: white;
}

/* 基本信息 */
.basic-info {
    flex: 1;
}

.user-name {
    display: block;
    font-size: 40rpx;
    font-weight: 600;
    color: white;
    margin-bottom: 8rpx;
}

.user-id {
    display: block;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 16rpx;
}

.department-info {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}

.dept-text {
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.9);
    background: rgba(255, 255, 255, 0.15);
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
}

.divider {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.5);
    margin: 0 12rpx;
}

.position-text {
    font-size: 26rpx;
    color: rgba(255, 255, 255, 0.9);
    background: rgba(255, 255, 255, 0.15);
    padding: 6rpx 16rpx;
    border-radius: 20rpx;
}

.phone-section {
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.1);
    padding: 12rpx 20rpx;
    border-radius: 25rpx;
    width: fit-content;
}

.phone-icon {
    font-size: 28rpx;
    color: white;
    margin-right: 12rpx;
}

.phone-text {
    font-size: 28rpx;
    color: white;
    margin-right: 12rpx;
}

.phone-hint {
    font-size: 24rpx;
    color: #ffa500;
    background: rgba(255, 165, 0, 0.1);
    padding: 4rpx 12rpx;
    border-radius: 15rpx;
}

/* 编辑按钮 */
.edit-btn {
    width: 100rpx;
    height: 56rpx;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1rpx solid rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
}

.edit-text {
    font-size: 26rpx;
    color: white;
    font-weight: 500;
}

/* 工作统计 */
.work-statistics {
    display: flex;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 20rpx;
    padding: 30rpx;
    backdrop-filter: blur(10px);
    position: relative;
    z-index: 2;
}

.stat-item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.stat-number {
    font-size: 36rpx;
    font-weight: 600;
    color: white;
    margin-bottom: 8rpx;
}

.stat-label {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.8);
}

.stat-divider {
    width: 1rpx;
    background: rgba(255, 255, 255, 0.2);
    margin: 0 20rpx;
}

/* 功能菜单区域 */
.menu-section {
    background: white;
    border-radius: 20rpx;
    margin: 0 32rpx 30rpx;
    padding: 30rpx 0;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
    padding: 0 30rpx 20rpx;
    border-bottom: 1rpx solid #f0f0f0;
    margin-bottom: 20rpx;
}

.title-text {
    font-size: 32rpx;
    font-weight: 600;
    color: #333;
}

.menu-grid {
    padding: 0 20rpx;
}

.menu-item {
    display: flex;
    align-items: center;
    padding: 28rpx 20rpx;
    border-radius: 16rpx;
    transition: all 0.2s;
}

.menu-item:active {
    background-color: #f8f9fa;
    transform: translateY(-2rpx);
}

.menu-icon {
    width: 80rpx;
    height: 80rpx;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 16rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 24rpx;
}

.icon-text {
    font-size: 40rpx;
}

.menu-content {
    flex: 1;
}

.menu-title {
    display: block;
    font-size: 32rpx;
    color: #333;
    font-weight: 500;
    margin-bottom: 6rpx;
}

.menu-subtitle {
    display: block;
    font-size: 26rpx;
    color: #999;
}

.menu-arrow {
    margin-left: 20rpx;
}

.arrow-icon {
    font-size: 40rpx;
    color: #ccc;
}

/* 系统设置区域 */
.system-section {
    background: white;
    border-radius: 20rpx;
    margin: 0 32rpx 30rpx;
    padding: 30rpx 0;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.system-list {
    padding: 0 20rpx;
}

.system-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 28rpx 20rpx;
    border-radius: 16rpx;
    transition: all 0.2s;
}

.system-item:active {
    background-color: #f8f9fa;
}

.item-left {
    display: flex;
    align-items: center;
}

.item-icon {
    font-size: 40rpx;
    margin-right: 24rpx;
    width: 60rpx;
    text-align: center;
}

.item-title {
    font-size: 32rpx;
    color: #333;
}

.item-right {
    display: flex;
    align-items: center;
}

.version-text {
    font-size: 28rpx;
    color: #999;
    margin-right: 12rpx;
}

.login-time {
    font-size: 26rpx;
    color: #999;
}

.phone-call {
    font-size: 28rpx;
    color: #1890ff;
    margin-right: 12rpx;
}

/* 退出登录按钮 */
.logout-section {
    padding: 0 32rpx;
    margin-top: 40rpx;
}

.logout-btn {
    height: 100rpx;
    line-height: 100rpx;
    font-size: 32rpx;
    border-radius: 20rpx;
    background: linear-gradient(135deg, #ff4d4f 0%, #f5222d 100%);
    color: white;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 6rpx 20rpx rgba(245, 34, 45, 0.2);
    transition: all 0.2s;
}

.logout-btn:active {
    transform: scale(0.98);
    box-shadow: 0 3rpx 10rpx rgba(245, 34, 45, 0.3);
}

.logout-btn::after {
    border: none;
}

.logout-icon {
    font-size: 36rpx;
    margin-right: 15rpx;
}

.logout-text {
    font-weight: 500;
}

/* 底部版权信息 */
.footer {
    text-align: center;
    margin-top: 60rpx;
    padding-bottom: 40rpx;
}

.copyright {
    display: block;
    font-size: 26rpx;
    color: #999;
    margin-bottom: 8rpx;
}

.slogan {
    display: block;
    font-size: 24rpx;
    color: #ccc;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
    .user-name {
        font-size: 36rpx;
    }

    .user-id {
        font-size: 26rpx;
    }

    .stat-number {
        font-size: 32rpx;
    }

    .menu-item,
    .system-item {
        padding: 24rpx 20rpx;
    }
}

/* 添加默认头像样式 */
@keyframes fadeIn {
    from {
        opacity: 0;
    }

    to {
        opacity: 1;
    }
}

.user-avatar {
    animation: fadeIn 0.5s ease;
}


/* 弹窗遮罩层 */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    animation: fadeIn 0.3s ease;
}

/* 添加记录弹窗 */
.add-modal {
    width: 650rpx;
    background: #fff;
    border-radius: 20rpx;
    overflow: hidden;
    animation: slideUp 0.3s ease;
}


.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.modal-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #fff;
}

.close-btn {
    font-size: 40rpx;
    color: #fff;
    cursor: pointer;
    padding: 0 10rpx;
}

.modal-content {
    padding: 30rpx;
    max-height: 500rpx;
    overflow-y: auto;
}


/* 弹窗操作按钮 */
.modal-actions {
    display: flex;
    padding: 20rpx 30rpx;
    border-top: 1rpx solid #f0f0f0;
}

.action-btn {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    border-radius: 10rpx;
    margin: 0;
    padding: 0;
    transition: all 0.2s;
}


/* 添加弹窗操作按钮 */
.action-btn.cancel-btn {
    background: #f8f9fa;
    color: #666;
    border: 1rpx solid #dee2e6;
    margin-right: 15rpx;
}

.action-btn.save-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
}

.photo {
    height: 250rpx;
    width: 250rpx;
    border-radius: 50%;
}