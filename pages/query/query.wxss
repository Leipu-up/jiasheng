/* 页面背景 */
page {
    background-color: #f8f9fa;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  }
  
  /* 搜索区域 */
  .search-section {
    padding: 30rpx 32rpx;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 0 0 24rpx 24rpx;
    box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.3);
  }
  
  .search-wrapper {
    display: flex;
    align-items: center;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20rpx;
    padding: 0 24rpx;
    height: 100rpx;
    box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }
  
  .search-wrapper:focus-within {
    box-shadow: 0 8rpx 30rpx rgba(102, 126, 234, 0.4);
    transform: translateY(-2rpx);
  }
  
  .search-input {
    flex: 1;
    height: 100%;
    font-size: 32rpx;
    color: #333;
    padding-right: 24rpx;
    font-weight: 500;
  }
  
  .placeholder {
    color: #999;
    font-size: 30rpx;
  }
  
  .search-btn {
    width: 140rpx;
    height: 70rpx;
    line-height: 70rpx;
    font-size: 28rpx;
    font-weight: 600;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 12rpx;
    margin: 0;
    padding: 0;
    box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.4);
    transition: all 0.2s;
  }
  
  .search-btn:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 6rpx rgba(102, 126, 234, 0.6);
  }
  /* 最小化按钮 */
.search-btn.compact {
    width: 240rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    border-radius: 10rpx;
    margin-left: 10rpx;
  }
  .search-tips {
    margin-top: 20rpx;
    text-align: center;
  }
  
  .search-tips text {
    font-size: 24rpx;
    color: rgba(255, 255, 255, 0.9);
    opacity: 0.9;
  }
  
  /* 结果区域 */
  .result-section {
    padding: 32rpx;
    min-height: 800rpx;
  }
  
  /* 空状态 */
  .empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 120rpx 32rpx;
    text-align: center;
  }
  
  .empty-icon {
    width: 240rpx;
    height: 240rpx;
    margin-bottom: 40rpx;
    opacity: 0.7;
  }
  
  .empty-text {
    font-size: 32rpx;
    color: #666;
    font-weight: 500;
    margin-bottom: 16rpx;
  }
  
  .empty-subtext {
    font-size: 26rpx;
    color: #999;
  }
  
  /* 数据表格 */
  .data-table {
    background: #fff;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.06);
    margin-top: 20rpx;
  }
  
  /* 表头 */
  .table-header {
    display: flex;
    background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
    border-bottom: 2rpx solid #dee2e6;
    padding: 28rpx 24rpx;
  }
  
  .header-cell {
    font-size: 28rpx;
    font-weight: 600;
    color: #495057;
    display: flex;
    align-items: center;
  }
  
  .header-cell.product-name {
    width: 360rpx;
    flex-shrink: 0;
  }
  
  .header-cell.version {
    width: 150rpx;
    flex-shrink: 0;
  }
  
  .header-cell.process {
    flex: 1;
    min-width: 0;
  }
  
  /* 表格内容 */
  .table-body {
    max-height: 800rpx;
    overflow-y: auto;
  }
  
  /* 加载行 */
  .loading-row {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 80rpx 0;
  }
  
  .loading-spinner {
    width: 60rpx;
    height: 60rpx;
    border: 6rpx solid #f3f3f3;
    border-top: 6rpx solid #667eea;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin-bottom: 20rpx;
  }
  
  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
  
  .loading-row text {
    font-size: 28rpx;
    color: #999;
  }
  
  /* 数据行 */
  .table-row {
    display: flex;
    border-bottom: 1rpx solid #f0f0f0;
    padding: 28rpx 24rpx;
    transition: all 0.2s;
  }
  
  .table-row:last-child {
    border-bottom: none;
  }
  
  .table-row:active {
    background-color: #f8f9fa;
    transform: translateY(-1rpx);
  }
  
  .row-cell {
    display: flex;
    align-items: flex-start;
    overflow: hidden;
  }
  
  .row-cell.product-name {
    width: 300rpx;
    flex-shrink: 0;
    padding-right: 24rpx;
  }
  
  .product-name-text {
    font-size: 28rpx;
    color: #333;
    line-height: 1.5;
    font-weight: 500;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
    max-height: 84rpx; /* 2行高度 */
  }
  
  .row-cell.version {
    width: 180rpx;
    flex-shrink: 0;
    justify-content: center;
  }
  
  .version-badge {
    background: linear-gradient(135deg, #e6f7ff 0%, #bae7ff 100%);
    color: #1890ff;
    font-size: 24rpx;
    font-weight: 600;
    padding: 8rpx 20rpx;
    border-radius: 20rpx;
    min-width: 80rpx;
    text-align: center;
    box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.15);
  }
  
  .row-cell.process {
    flex: 1;
    min-width: 0;
    padding-left: 24rpx;
  }
  
  .process-text {
    font-size: 28rpx;
    color: #666;
    line-height: 1.5;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
  }
  
  /* 分页区域 */
  .pagination-section {
    margin-top: 40rpx;
    background: #fff;
    border-radius: 20rpx;
    padding: 32rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  }
  
  .pagination-info {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30rpx;
    padding-bottom: 24rpx;
    border-bottom: 1rpx solid #f0f0f0;
  }
  
  .pagination-info text {
    font-size: 28rpx;
    color: #666;
  }
  
  .page-info {
    color: #667eea;
    font-weight: 600;
  }
  
  .pagination-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .pagination-btn {
    width: 160rpx;
    height: 64rpx;
    line-height: 64rpx;
    font-size: 26rpx;
    margin: 0;
    padding: 0;
    border-radius: 12rpx;
    background: #f8f9fa;
    border: 1rpx solid #dee2e6;
    color: #495057;
    transition: all 0.2s;
  }
  
  .pagination-btn:not([disabled]):active {
    transform: scale(0.96);
  }
  
  .pagination-btn.prev {
    text-align: left;
    padding-left: 20rpx;
  }
  
  .pagination-btn.next {
    text-align: right;
    padding-right: 20rpx;
  }
  
  .pagination-btn[disabled] {
    opacity: 0.5;
    color: #999;
  }
  
  .btn-text {
    font-weight: 500;
  }
  
  /* 页码按钮 */
  .page-numbers {
    display: flex;
    align-items: center;
    gap: 12rpx;
  }
  
  .page-number {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 26rpx;
    color: #666;
    border-radius: 10rpx;
    background: #f8f9fa;
    border: 1rpx solid #e9ecef;
    transition: all 0.2s;
  }
  
  .page-number:active:not(.active):not(:last-child):not(:first-child) {
    background: #e9ecef;
    transform: scale(0.95);
  }
  
  .page-number.active {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
    font-weight: 600;
    border-color: #667eea;
    box-shadow: 0 4rpx 12rpx rgba(102, 126, 234, 0.3);
  }
  
  .page-number:last-child,
  .page-number:first-child {
    width: auto;
    padding: 0 16rpx;
    color: #999;
  }
  
  /* 响应式调整 */
  @media (max-width: 750rpx) {
    .row-cell.product-name {
      width: 280rpx;
    }
    
    .row-cell.version {
      width: 150rpx;
    }
    
    .header-cell.product-name {
      width: 280rpx;
    }
    
    .header-cell.version {
      width: 150rpx;
    }
  }

  /* 收藏按钮样式 */
.favorite-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 70rpx;
  background: #f8f9fa;
  border: 2rpx solid #dee2e6;
  border-radius: 12rpx;
  margin-right: 20rpx;
  padding: 0 10rpx;
  transition: all 0.3s;
  flex-shrink: 0;
}

.favorite-btn.active {
  background: linear-gradient(135deg, #ffd700 0%, #ffa500 100%);
  border-color: #ffa500;
  box-shadow: 0 4rpx 12rpx rgba(255, 165, 0, 0.3);
}

.favorite-btn:active {
  transform: scale(0.95);
}

.favorite-icon {
  color: #ffa500;
  font-size: 28rpx;
  margin-right: 8rpx;
  font-weight: bold;
}

.favorite-btn.active .favorite-icon {
  color: #fff;
}

.favorite-text {
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

.favorite-btn.active .favorite-text {
  color: #fff;
  font-weight: 600;
}

/* 收藏提示 */
.favorite-tips {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  padding: 15rpx 20rpx;
  background: rgba(255, 215, 0, 0.1);
  border-radius: 10rpx;
  border: 1rpx solid rgba(255, 215, 0, 0.3);
}

.favorite-tips text {
  font-size: 26rpx;
  color: #ffa500;
  font-weight: 500;
}

.clear-favorites {
  color: #ff4444;
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  background: rgba(255, 68, 68, 0.1);
  border-radius: 6rpx;
}

.clear-favorites:active {
  background: rgba(255, 68, 68, 0.2);
}

/* 列表收藏列样式 */
.header-cell.favorite {
  width: 80rpx;
  text-align: center;
}

.row-cell.favorite {
  width: 80rpx;
  justify-content: center;
  align-items: center;
}

.favorite-star {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f8f9fa;
  border: 2rpx solid #dee2e6;
  transition: all 0.2s;
}

.favorite-star.active {
  background: linear-gradient(135deg, #ffd700 0%, #ffa500 100%);
  border-color: #ffa500;
  box-shadow: 0 4rpx 8rpx rgba(255, 165, 0, 0.3);
}

.favorite-star text {
  color: #ccc;
  font-size: 28rpx;
}

.favorite-star.active text {
  color: #fff;
  font-weight: bold;
}

.favorite-star:active {
  transform: scale(0.9);
}

/* 工序名称下方的收藏按钮 */
.item-favorite {
  display: flex;
  align-items: center;
  margin-top: 12rpx;
  padding: 6rpx 12rpx;
  background: #f8f9fa;
  border-radius: 20rpx;
  width: fit-content;
  transition: all 0.2s;
}

.item-favorite.favorited {
  background: linear-gradient(135deg, #ffd700 0%, #ffa500 100%);
}

.item-favorite-icon {
  color: #ffa500;
  font-size: 22rpx;
  margin-right: 6rpx;
  font-weight: bold;
}

.item-favorite.favorited .item-favorite-icon {
  color: #fff;
}

.item-favorite-text {
  font-size: 22rpx;
  color: #666;
}

.item-favorite.favorited .item-favorite-text {
  color: #fff;
  font-weight: 500;
}

.item-favorite:active {
  transform: scale(0.95);
}

/* 输入框在收藏模式下的样式 */
.search-input:disabled {
  background: #f8f9fa;
  color: #999;
  opacity: 1;
}

/* 弹窗遮罩层 */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    animation: fadeIn 0.3s ease;
  }
  
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }
  
  /* 详情弹窗 */
  .detail-modal {
    width: 600rpx;
    background: #fff;
    border-radius: 20rpx;
    overflow: hidden;
    animation: slideUp 0.3s ease;
  }
  
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(100rpx);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }
  
  .modal-title {
    font-size: 32rpx;
    font-weight: 600;
    color: #fff;
  }
  
  .close-btn {
    font-size: 40rpx;
    color: #fff;
    cursor: pointer;
    padding: 0 10rpx;
  }
  
  .modal-content {
    padding: 30rpx;
    max-height: 500rpx;
    overflow-y: auto;
  }
  
  .detail-item {
    display: flex;
    margin-bottom: 20rpx;
    align-items: flex-start;
  }
  
  .detail-label {
    width: 160rpx;
    font-size: 28rpx;
    color: #666;
    font-weight: 500;
    flex-shrink: 0;
  }
  
  .detail-value {
    flex: 1;
    font-size: 28rpx;
    color: #333;
    line-height: 1.5;
  }
  
  /* 弹窗操作按钮 */
  .modal-actions {
    display: flex;
    padding: 20rpx 30rpx;
    border-top: 1rpx solid #f0f0f0;
  }
  
  .action-btn {
    flex: 1;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 28rpx;
    border-radius: 10rpx;
    margin: 0;
    padding: 0;
    transition: all 0.2s;
  }
  
  .action-btn.add-btn {
    background: linear-gradient(135deg, #36d1dc 0%, #5b86e5 100%);
    color: #fff;
    margin-right: 15rpx;
  }
  
  .action-btn.favorite-btn {
    background: #f8f9fa;
    color: #666;
    border: 1rpx solid #dee2e6;
  }
  
  .action-btn.favorite-btn.active {
    background: linear-gradient(135deg, #ffd700 0%, #ffa500 100%);
    color: #fff;
    border: none;
  }
  
  .btn-icon {
    margin-right: 8rpx;
    font-size: 30rpx;
  }
  
  /* 添加记录弹窗 */
  .add-modal {
    width: 650rpx;
    background: #fff;
    border-radius: 20rpx;
    overflow: hidden;
    animation: slideUp 0.3s ease;
  }
  
  .form-item {
    display: flex;
    align-items: center;
    margin-bottom: 30rpx;
  }
  
  .form-label {
    width: 140rpx;
    font-size: 28rpx;
    color: #333;
    font-weight: 500;
    flex-shrink: 0;
  }
  
  .form-input {
    flex: 1;
    height: 70rpx;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
  }
  
  .time-picker {
    flex: 1;
    height: 70rpx;
    border: 1rpx solid #ddd;
    border-radius: 8rpx;
    padding: 0 20rpx;
    font-size: 28rpx;
    line-height: 70rpx;
    color: #333;
  }
  
  .time-picker:empty::before {
    content: '请选择时间';
    color: #999;
  }
  
  /* 添加弹窗操作按钮 */
  .action-btn.cancel-btn {
    background: #f8f9fa;
    color: #666;
    border: 1rpx solid #dee2e6;
    margin-right: 15rpx;
  }
  
  .action-btn.save-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: #fff;
  }